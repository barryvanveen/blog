{
    "name": "barryvanveen/blog",
    "type": "project",
    "description": "Blog of Barry van Veen (https://barryvanveen.nl)",
    "keywords": [
        "blog",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2.0",
        "ext-pdo": "*",
        "bugsnag/bugsnag-laravel": "^2.0",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.8.*",
        "laravel/tinker": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.6",
        "beyondcode/laravel-dump-server": "^1.0",
        "doctrine/dbal": "~2.3",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "laravel/dusk": "^5.0",
        "laravel/homestead": "^8.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^8.0",
        "roave/security-advisories": "dev-master",
        "sensiolabs-de/deptrac-shim": "^0.4",
        "slevomat/coding-standard": "~5.0",
        "squizlabs/php_codesniffer": "^3.4",
        "vimeo/psalm": "^3.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta"
        ],
        "check-style": "vendor/bin/phpcs --standard=ruleset.xml",
        "fix-style": "vendor/bin/phpcbf --standard=ruleset.xml",
        "ide-helper": [
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan ide-helper:models -R -W --no-interaction",
            "@fix-style"
        ],
        "static-analysis": [
            "vendor/bin/psalm",
            "vendor/bin/deptrac"
        ],
        "test": [
            "@test-unit",
            "@test-feature",
            "@test-browser"
        ],
        "test-browser": "php artisan dusk",
        "test-feature": "vendor/bin/phpunit --testsuite Feature",
        "test-unit": "vendor/bin/phpunit --testsuite Unit"
    }
}
