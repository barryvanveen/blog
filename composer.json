{
    "name": "barryvanveen/blog",
    "type": "project",
    "description": "Blog of Barry van Veen (https://barryvanveen.nl)",
    "keywords": [
        "blog",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0.2",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "aws/aws-sdk-php": "^3.173",
        "barryvanveen/lastfm": "^2.0.0",
        "bepsvpt/secure-headers": "^7.2",
        "bugsnag/bugsnag-laravel": "^2.0",
        "cebe/markdown": "^1.2",
        "fig/http-message-util": "^1.1",
        "laravel/framework": "^9.0",
        "laravel/helpers": "^1.1",
        "laravel/tinker": "^2.7",
        "league/flysystem-aws-s3-v3": "^3.0",
        "nyholm/psr7": "^1.2",
        "predis/predis": "~2.0",
        "psr/http-message": "^1.0",
        "scrivo/highlight.php": "^9.18",
        "spatie/laravel-backup": "^8.0",
        "symfony/psr-http-message-bridge": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.6",
        "doctrine/dbal": "~3.0",
        "fakerphp/faker": "^1.9.1",
        "laravel/dusk": "^7.0",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^6.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "qossmic/deptrac-shim": "^0.24",
        "rector/rector": "^0.14.5",
        "roave/security-advisories": "dev-latest",
        "rregeer/phpunit-coverage-check": "^0.3.1",
        "slevomat/coding-standard": "^8.1",
        "spatie/laravel-ignition": "^1.0",
        "squizlabs/php_codesniffer": "^3.4",
        "vimeo/psalm": "^4.3.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/package-versions-deprecated": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta"
        ],
        "check-style": [
            "vendor/bin/phpcs --standard=ruleset.xml",
            "vendor/bin/rector --dry-run"
        ],
        "fix-style": [
            "vendor/bin/phpcbf --standard=ruleset.xml",
            "vendor/bin/rector"
        ],
        "ide-helper": [
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan ide-helper:models -R -W --no-interaction",
            "@fix-style"
        ],
        "static-analysis": [
            "vendor/bin/psalm",
            "vendor/bin/deptrac"
        ],
        "test": [
            "@test-unit",
            "@test-feature",
            "@test-browser"
        ],
        "test-browser": "php artisan dusk",
        "test-feature": "vendor/bin/phpunit --testsuite Feature",
        "test-unit": "vendor/bin/phpunit --testsuite Unit"
    }
}
