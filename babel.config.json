{
    "presets": [
        [
            "@babel/env",
            {
                "targets": {
                    "edge": "17",
                    "firefox": "60",
                    "chrome": "67",
                    "safari": "11.1"
                }
            }
        ]
    ],
    "plugins": [
        "@babel/plugin-transform-runtime",
        ["prismjs", {
            "languages": ["bash", "git", "json", "markdown", "php", "php-extras", "scss", "sql", "yaml"],
            "plugins": ["autolinker", "line-numbers"],
            "theme": "okaidia",
            "css": false
        }]
    ]
}
